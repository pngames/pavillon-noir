<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
  <class name="NRSS.mapping.Group, NRSS.mapping" table="db_group">
    <id name="Id" type="Int32">
      <generator class="native" />
    </id>
    
    <property name="Name" type="String" />
    <property name="Creation" type="DateTime" />

    <bag name="Users" table="group_user" lazy="true">
      <key column="group_id" />
      <many-to-many class="NRSS.mapping.User, NRSS.mapping" column="user_id" />
    </bag>

    <bag name="Feeds" table="group_feed" lazy="true">
      <key column="group_id" />
      <many-to-many class="NRSS.mapping.Feed, NRSS.mapping" column="feed_id" />
    </bag>

    <bag name="Chans" table="group_chan" lazy="true">
      <key column="group_id" />
      <many-to-many class="NRSS.mapping.Chan, NRSS.mapping" column="chan_id" />
    </bag>
  </class>
</hibernate-mapping>