<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
  <class name="KKTRSS.Server.Model.Account, KKTRSS.ServerModel" table="account">
    <id name="Id" type="Int64" column="account_id">
      <generator class="hilo">
        <param name="table">hi_account_Id</param>
        <param name="column">next_value</param>
        <param name="max_lo">100</param>
      </generator>
    </id>

    <property name="Email" type="String" unique="true" />
    <property name="Password" type="String"  />
    <property name="IsActive" type="Boolean"/>
    <property name="Autologin" type="String"  />
   
    <property name="CreationDate" type="DateTime" />
    <property name="LastUpdate" type="DateTime" />

    <bag name="ReadRssItems" inverse="true" lazy="false">
      <key column="fk_account_id" />
      <one-to-many class="KKTRSS.Server.Model.ReadRssItem, KKTRSS.ServerModel" />
    </bag>

    <bag name="OwnedGroups" inverse="true" lazy="false">
      <key column="fk_account_id" />
      <one-to-many class="KKTRSS.Server.Model.Group, KKTRSS.ServerModel"  />
    </bag>

    <bag name="Groups" table="account_in_group"  lazy="false">
      <key column="fk_account_id" />
      <many-to-many class="KKTRSS.Server.Model.Group, KKTRSS.ServerModel" column="fk_group_id"  />
    </bag>

    <bag name="SubscribedRssFeeds" table="subscribed_rss_feed" lazy="false">
      <key column="fk_account_id" />
      <many-to-many class="KKTRSS.Server.Model.RssFeedRef, KKTRSS.ServerModel" column="fk_rss_feed_ref_id"  />
    </bag>
    
  </class>
</hibernate-mapping>