<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
  <class name="KKTRSS.Server.Model.RssFeedRef, KKTRSS.ServerModel" table="rss_feed_ref">
    <id name="Id" type="Int64" column="rss_feed_ref_id">
      <generator class="hilo">
        <param name="table">hi_rss_feed_ref_id</param>
        <param name="column">next_value</param>
        <param name="max_lo">100</param>
      </generator>
    </id>

    <property name="Name" type="String" />

    <property name="CreationDate" type="DateTime" />
    <property name="LastUpdate" type="DateTime" />
    <property name="Url" type="String" />
    
    <many-to-one name="Group" class="KKTRSS.Server.Model.Group, KKTRSS.ServerModel" column="fk_group_id"/>

    <set name="Accounts" table="subscibed_rss_feed"  lazy="true">
      <key column="fk_rss_feed_ref_id" />
      <many-to-many class="KKTRSS.Server.Model.Account, KKTRSS.ServerModel" column="fk_account_id"/>
    </set>
    
  </class>
</hibernate-mapping>