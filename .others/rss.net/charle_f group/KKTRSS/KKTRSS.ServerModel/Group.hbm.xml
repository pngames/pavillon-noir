<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
  <class name="KKTRSS.Server.Model.Group, KKTRSS.ServerModel" table="group_tab">
    <id name="Id" type="Int64" column="group_id">
      <generator class="hilo">
        <param name="table">hi_group_id</param>
        <param name="column">next_value</param>
        <param name="max_lo">100</param>
      </generator>
    </id>

    <property name="Name" type="String" />
    <property name="Privacy" type="Boolean"/>

    <property name="CreationDate" type="DateTime" />
    <property name="LastUpdate" type="DateTime" />

    <many-to-one name="Owner" class="KKTRSS.Server.Model.Account, KKTRSS.ServerModel" column="fk_account_id" />
    
    <set name="Accounts" table="account_in_group"  lazy="true">
      <key column="fk_group_id" />
      <many-to-many class="KKTRSS.Server.Model.Account, KKTRSS.ServerModel" column="fk_account_id"/>
    </set>

    <set name="RssFeedRefs" inverse="true" lazy="true">
      <key column="fk_group_id" />
      <one-to-many class="KKTRSS.Server.Model.RssFeedRef, KKTRSS.ServerModel" />
    </set>

  </class>
</hibernate-mapping>